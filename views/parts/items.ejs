<% for (var item in items ) { %>

    <div class="item-container">
        
        <div class="item">
            
            <div class="item-img">
                <img src="<%- items[item].img %>" />
                
                <div class="item-overlay">
                    <div class="click-to-add">
                        <p>
                            <a data-id=<%- items[item].id %> class="add-to-cart"><i class="fa fa-plus-square" aria-hidden="true"></i></a>
                        </p>
                    </div>
                </div>
                
                <div class="item-info">
                    <span class="item-price">   
                        <i class="fa fa-usd" aria-hidden="true"></i><%- items[item].price %>
                    </span>
                    <hr>
                    <span class="item-title">   
                        <%- items[item].title %><br>
                        <!--item is a variable in items object-->
                    </span>
                </div>
                
            </div>
            
        </div>
        
    </div>
<% } %>